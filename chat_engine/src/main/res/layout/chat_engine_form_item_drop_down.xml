<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_16dp"
    android:paddingVertical="@dimen/padding_12dp"
    android:background="?ChiliInputViewBackgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Chili.H5.Primary"
        android:textColor="@color/gray_1_alpha_50"
        android:id="@+id/tv_label"/>

    <ImageView
        android:layout_width="@dimen/view_24dp"
        android:layout_height="@dimen/view_24dp"
        android:layout_marginStart="@dimen/padding_8dp"
        android:src="@drawable/chili_ic_chevron"/>

</LinearLayout>